<div class="col-md-4">
  <h5>New Charger</h5>
  <%= form_with model: @charger, :html => {:class => "form-horizontal", :id => "charger-form"}, remote: true do |f| %>

    <div class="form-group">
        <%= f.label :chargeNo, "Charger Serial no." %>
        <%= f.number_field :chargerNo, class: "form-control", id: "charger-no-input", placeholder: "BBF(C)N00000000", max: 99999999%>
        <div id="error-charger-no" class="invalid-feedback"></div>
    </div>
    <div class="form-group">
      <%= f.submit "Save charger", class: "btn btn-primary", data: {disable_with: "saving..."} %>
    </div>

  <% end %>

</div>
