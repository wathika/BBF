<div class="col-md-4">
  <h5>New bike</h5>
  <%= form_with model: @bike, :html => {:class => "form-horizontal", :id => "bike-form"} do |f| %>

    <div class="form-group">
        <%= f.label :motorNo, "Motor Serial no." %>
        <%= f.text_field :motorNo, class: "form-control", id: "motor-no-input", placeholder: "BBF(M)N00000000"%>
        <div id="error-motor-no" class="invalid-feedback"></div>
    </div>
    <div class="form-group">
      <%= f.label :colour, "Bike colour." %>
      <%= f.select :colour, options_for_select([
        "Red",
        "Pink",
        "Blue",
        "Black",
        "Gold"
        ]), { include_blank: "Choose bike colour" }, { class: "custom-select form-control", id: "bike-colour-input" } %>
        <div id="error-colour" class="invalid-feedback"></div>
    </div>
    <div class="form-group">
      <%= f.submit "Save bike", class: "btn btn-primary", data: {disable_with: "saving..."} %>
    </div>

  <% end %>

</div>
