//ERROR HANDLING


//remove old validation messages


var errorBatteryNoDiv = document.getElementById('error-battery-no')

var batteryNoInput = document.getElementById('battery-no-input')

errorBatteryNoDiv.innerHTML = "<%= escape_javascript(@errorBatteryNo[0]) %>"

<% if @resetForm == "1" %>
  document.getElementById("battery-form").reset()
<% else %>
  batteryNoInput.classList.add('is-invalid')
<% end %>


//Add new input to page via AJAX
var batteryList = document.getElementById('battery-list')
var newBattery = "<%= escape_javascript( render 'batterys/battery', battery: @battery ) %>"

var div = document.createElement('div')

div.innerHTML = newBattery

batteryList.appendChild(div.firstChild)
