<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8 col-md-offset-2">
      <h1> Add new bike </h1>

      <div class="new-bike-form">
        <%= form_with model: @bike, :html => {:class => "form-horizontal"} do |f| %>

          <div class="form-group">
            <div class="" id="motor-no">
              <%= f.label :motorNo, "Motor Serial no." %>
              <%= f.text_field :motorNo, class: "form-control", id: "motor-no-input", placeholder: "BBF(M)N00000000"%>
              <div id="error-motor-no"></div>
            </div>
          </div>
          <div class="form-group">
            <div class="" id="battery-no">
              <%= f.label :batteryNo, "Battery Serial no." %>
              <%= f.text_field :batteryNo, class: "form-control", id: "battery-no-input", placeholder: "BBF(B)N00000000" %>
              <div id="error-battery-no"></div>
            </div>
          </div>
          <div class="form-group">
            <div class="" id="charger-no">
              <%= f.label :chargerNo, "Charger Serial no." %>
              <%= f.text_field :chargerNo, class: "form-control", id: "charger-no-input", placeholder: "BBF(C)N00000000" %>
              <div id="error-charger-no"></div>
            </div>
          </div>
          <div class="form-group">
            <div class="" id="bike-colour">
              <%= f.label :bikeColour, "Bike Colour" %>
              <%= f.select :colour , options_for_select([
                "Red",
                "Pink",
                "Blue",
                "Black",
                "Gold"
                ]), { include_blank: "Choose bike colour" }, { class: "custom-select form-control", id: "bike-colour-input" } %>
                <div id="error-colour"></div>
              </div>
          </div>
          <div class="">
            <%= f.submit "Save bike", class: "btn btn-primary" %>
            <br>
            <span id="helpBlock" class="help-block"></span>
          </div>
        <% end %>
      </div>
        <div class="row">
          <div class="bikes-container col-md-8" id="bike-list">
            <h4> THIS IS A PREVIEW OF WHAT IS SAVED TO DB! </h4>
            <% @bikes.each do |bike| %>
              <%= render 'bike', bike: bike %>
            <% end %>
          </div>
        </div>
    </div>
  </div>
</div>
